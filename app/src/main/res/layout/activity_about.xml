<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/about_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/arrow_back_24"
            app:title="关于" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/md_theme_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:src="@mipmap/ic_launcher"
                        android:contentDescription="App Icon" />

                    <TextView
                        android:id="@+id/about_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/app_name"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />

                    <TextView
                        android:id="@+id/text_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="版本 1.0.0"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:alpha="0.8" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/md_theme_outline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:showDividers="middle"
                    android:dividerPadding="12dp"
                    android:divider="@android:color/transparent">

                    <LinearLayout
                        android:id="@+id/row_backup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/backup_24"
                            android:contentDescription="Backup Icon" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/backup_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="备份配置"
                                android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

                            <TextView
                                android:id="@+id/backup_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="最近备份：无"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:alpha="0.7" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/row_restore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/restore_24"
                            android:contentDescription="Restore Icon" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/restore_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="还原配置"
                                android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

                            <TextView
                                android:id="@+id/restore_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="从文件还原应用配置"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:alpha="0.7" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/row_app_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/settings_24"
                            android:contentDescription="Settings Icon" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/appsettings_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="应用设置"
                                android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

                            <TextView
                                android:id="@+id/appsettings_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="打开系统的应用设置页面"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:alpha="0.7" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/row_report_bug"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/bug_report_24"
                            android:contentDescription="Bug Report Icon" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/report_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="报告错误"
                                android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

                            <TextView
                                android:id="@+id/report_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="在 GitHub 上提交问题"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:alpha="0.7" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/row_open_source"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/code_24"
                            android:contentDescription="Code Icon" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/opensource_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="开源仓库"
                                android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

                            <TextView
                                android:id="@+id/opensource_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="查看源代码和贡献"

                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:alpha="0.7" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/row_contact_author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/info_24"
                            android:contentDescription="Contact Icon" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/contact_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="联系作者"
                                android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

                            <TextView
                                android:id="@+id/contact_subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="访问作者主页"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:alpha="0.7" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
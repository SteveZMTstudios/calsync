<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="模拟通知测试"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_test_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="测试通知标题"
            android:inputType="text" />

        <EditText
            android:id="@+id/edit_test_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="测试通知正文"
            android:minLines="3"
            android:gravity="top"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btn_test_parse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="模拟解析并创建事件" />

        <Button
            android:id="@+id/btn_open_notification_access_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="打开通知访问设置" />

        <Button
            android:id="@+id/btn_open_notification_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="调试通知捕获" />

        <Button
            android:id="@+id/btn_refresh_notification_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="刷新通知监听服务" />

        <Button
            android:id="@+id/btn_battery_optimization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="请求忽略电池优化" />

        <Button
            android:id="@+id/btn_select_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="选择日历" />

        <TextView
            android:id="@+id/text_calendar_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="未选择日历" />

        <Switch
            android:id="@+id/switch_keep_alive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="后台保持运行" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="结果日志" />

        <TextView
            android:id="@+id/text_result"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:scrollbars="vertical"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_open_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="打开设置" />

    </LinearLayout>

 </ScrollView>